<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorLine"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.example.xl.foursling.view.xlist.XListView
            android:id="@+id/fragment_deposit_xlistview"
            android:layout_marginTop="@dimen/activity_height_fifteen"
            android:layout_marginLeft="@dimen/activity_height_fifteen"
            android:layout_marginRight="@dimen/activity_height_fifteen"
            android:divider="@color/colorLine"
            android:dividerHeight="@dimen/activity_height_fifteen"
            android:listSelector="@color/colorLucency"
            android:layout_height="match_parent"
            android:layout_width="match_parent"/>
        <include layout="@layout/loading"/>
        <include layout="@layout/not_data_layout"/>
    </FrameLayout>
</LinearLayout>