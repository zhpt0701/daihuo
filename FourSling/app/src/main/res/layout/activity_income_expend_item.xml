<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorLine"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/activity_income_expend_item_time"
        android:layout_width="wrap_content"
        android:textSize="@dimen/activity_height_twelve"
        android:background="@color/colorGrayTwo"
        android:textColor="@color/colorBlackFour"
        android:paddingLeft="@dimen/activity_height_five"
        android:paddingRight="@dimen/activity_height_five"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_marginTop="@dimen/activity_height_ten"
        android:background="@drawable/activity_income_expend_item_background"
        android:paddingTop="@dimen/activity_height_twenty_five"
        android:paddingBottom="@dimen/activity_height_forty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/activity_income_expend_item_title"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorBlackFour"
            android:textSize="@dimen/activity_height_fifteen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/activity_income_expend_item_money"
            android:layout_below="@+id/activity_income_expend_item_title"
            android:layout_marginTop="@dimen/activity_height_fifteen"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorRedTwo"
            android:textSize="@dimen/activity_height_twenty_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="@dimen/activity_number_thirty"
            android:id="@+id/activity_income_expend_item_line"
            android:layout_below="@+id/activity_income_expend_item_money"
            android:background="@drawable/activity_income_expend_item_textview_background"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/activity_height_twenty_five"
            android:layout_marginRight="@dimen/activity_height_twenty_five"
            android:layout_height="@dimen/activity_height_two" />
        <TextView
            android:layout_marginTop="@dimen/activity_height_twenty_four"
            android:id="@+id/activity_income_expend_item_yve"
            android:layout_below="@+id/activity_income_expend_item_line"
            android:layout_marginLeft="@dimen/activity_height_twenty_five"
            android:textSize="@dimen/activity_height_fifteen"
            android:text="@string/fragment_conent_yv"
            android:textColor="@color/colorBlackFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="@dimen/activity_height_twenty_four"
            android:id="@+id/activity_income_expend_item_yve_money"
            android:layout_below="@+id/activity_income_expend_item_line"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/activity_height_twenty_five"
            android:textSize="@dimen/activity_height_fifteen"
            android:textColor="@color/colorBlackFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="@dimen/activity_height_eighteen"
            android:id="@+id/activity_income_expend_item_fs_and_zh"
            android:layout_below="@+id/activity_income_expend_item_yve"
            android:layout_marginLeft="@dimen/activity_height_twenty_five"
            android:textSize="@dimen/activity_height_fifteen"
            android:textColor="@color/colorBlackFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/activity_income_expend_item_wx_and_alipay"
            android:layout_marginTop="@dimen/activity_height_eighteen"
            android:layout_marginRight="@dimen/activity_height_twenty_five"
            android:layout_below="@+id/activity_income_expend_item_yve_money"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/activity_height_fifteen"
            android:textColor="@color/colorBlackFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="@dimen/activity_height_eighteen"
            android:id="@+id/activity_income_expend_item_dh_and_sxf"
            android:layout_below="@+id/activity_income_expend_item_fs_and_zh"
            android:layout_marginLeft="@dimen/activity_height_twenty_five"
            android:textSize="@dimen/activity_height_fifteen"
            android:visibility="gone"
            android:textColor="@color/colorBlackFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/activity_income_expend_item_odd_number"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/activity_height_twenty_five"
            android:layout_below="@+id/activity_income_expend_item_wx_and_alipay"
            android:layout_marginTop="@dimen/activity_height_eighteen"
            android:textSize="@dimen/activity_height_fifteen"
            android:visibility="gone"
            android:textColor="@color/colorBlackFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="@dimen/activity_height_eighteen"
            android:id="@+id/activity_income_expend_item_xf_time"
            android:layout_below="@+id/activity_income_expend_item_dh_and_sxf"
            android:layout_marginLeft="@dimen/activity_height_twenty_five"
            android:textSize="@dimen/activity_height_fifteen"
            android:text="时间"
            android:textColor="@color/colorBlackFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/activity_income_expend_item_time_nu"
            android:layout_below="@+id/activity_income_expend_item_odd_number"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/activity_height_twenty_five"
            android:layout_marginTop="@dimen/activity_height_eighteen"
            android:textSize="@dimen/activity_height_fifteen"
            android:textColor="@color/colorBlackFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <ImageView
        android:background="@mipmap/bg_detaillist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>