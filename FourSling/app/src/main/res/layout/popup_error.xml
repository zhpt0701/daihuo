<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/popup_error_background"
        android:layout_marginLeft="@dimen/activity_height_twenty_one"
        android:layout_marginRight="@dimen/activity_height_twenty_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/popup_error_textview"
            android:gravity="center"
            android:paddingTop="@dimen/activity_height_twenty"
            android:paddingBottom="@dimen/activity_height_twenty"
            android:textColor="@color/colorBlackThree"
            android:textSize="@dimen/activity_number_sixteen"
            android:background="@color/colorLucency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_popup_error"
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="@string/popup_error_content"
            android:textColor="@color/colorRad"
            android:textSize="@dimen/activity_number_sixteen"
            android:background="@drawable/popup_error_btn_background"
            android:layout_height="@dimen/activity_height_fifty" />
    </LinearLayout>
</LinearLayout>