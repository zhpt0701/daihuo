<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/activity_lading_pay_pass"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@color/colorWhiteness"
            android:layout_height="@dimen/activity_height_sixty">
            <TextView
                android:textSize="@dimen/activity_height_fifteen"
                android:textColor="@color/colorBlackTwo"
                android:gravity="center"
                android:paddingLeft="@dimen/activity_height_twenty_one"
                android:text="新密码"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/editText_lading_pay_pass"
                android:layout_marginLeft="@dimen/activity_height_fifty_nine"
                android:hint="@string/lasing_new_paee_editText"
                android:password="true"
                android:lines="1"
                android:maxLength="6"
                android:textColor="@color/colorBlackFour"
                android:textColorHint="@color/colorGrayText"
                android:inputType="number"
                android:background="@drawable/edittext_landing_phone_background"
                android:textSize="@dimen/activity_height_fifteen"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/activity_height_twelve"
            android:background="@color/colorLine"
            android:layout_height="@dimen/activity_height_one" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@color/colorWhiteness"
            android:layout_height="@dimen/activity_height_sixty">
            <TextView
                android:textSize="@dimen/activity_height_fifteen"
                android:textColor="@color/colorBlackTwo"
                android:gravity="center"
                android:paddingLeft="@dimen/activity_height_twenty_one"
                android:text="确认新密码    "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/editText_ok_lading_pay_pass"
                android:paddingLeft="@dimen/activity_height_fifteen"
                android:hint="@string/lasing_new_paee_editText"
                android:lines="1"
                android:maxLength="6"
                android:textColor="@color/colorBlackFour"
                android:textColorHint="@color/colorGrayText"
                android:inputType="numberPassword"
                android:background="@drawable/edittext_landing_phone_background"
                android:textSize="@dimen/activity_height_fifteen"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>