<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorLine"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_title"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.example.xl.foursling.view.xlist.XListView
            android:id="@+id/activity_detail_xlistview"
            android:background="@color/colorWhiteness"
            android:layout_marginTop="@dimen/activity_height_five"
            android:divider="@color/colorLine"
            android:dividerHeight="@dimen/activity_height_one"
            android:layout_height="match_parent"
            android:layout_width="match_parent"/>
        <include layout="@layout/loading"/>
        <include layout="@layout/not_data_layout"/>
    </FrameLayout>
</LinearLayout>