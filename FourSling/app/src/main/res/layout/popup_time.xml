<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/popup_time_back"
        android:layout_marginLeft="@dimen/activity_height_forty"
        android:layout_marginRight="@dimen/activity_height_forty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/popup_time_textview_title"
            android:textSize="@dimen/activity_height_fifteen"
            android:textColor="@color/colorWhiteness"
            android:gravity="center"
            android:paddingTop="@dimen/activity_height_ten"
            android:paddingBottom="@dimen/activity_height_ten"
            android:text="@string/app_tip"
            android:background="@drawable/popup_time_textview_title_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/popup_time_textview_content"
            android:textColor="@color/colorBlackFour"
            android:gravity="center_horizontal"
            android:padding="@dimen/activity_height_ten"
            android:background="@drawable/popup_time_textview_content_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>