<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/colorLine"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/fragment_frieght_item_text_time"
        android:background="@color/colortimeback"
        android:layout_width="wrap_content"
        android:paddingLeft="@dimen/activity_height_five"
        android:paddingRight="@dimen/activity_height_five"
        android:textSize="@dimen/activity_height_twelve"
        android:textColor="@color/colorBlackThree"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="@dimen/activity_height_fifteen"
        android:orientation="vertical"
        android:background="@drawable/fragment_roder_item_background"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/activity_number_thirty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/fragment_freight_item_textview_succeed"
            android:layout_marginTop="@dimen/activity_number_seven"
            android:textColor="@color/colorBlackFour"
            android:textSize="@dimen/activity_number_sixteen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="@dimen/activity_height_twelve"
            android:layout_width="match_parent"
            android:background="@color/colorLine"
            android:layout_marginLeft="@dimen/activity_height_twenty_five"
            android:layout_marginRight="@dimen/activity_height_twenty_five"
            android:layout_height="@dimen/activity_height_one" />
        <TextView
            android:id="@+id/fragment_freight_item_textview_content"
            android:layout_marginTop="@dimen/activity_number_sixteen"
            android:layout_width="match_parent"
            android:textSize="@dimen/activity_height_thirteen"
            android:textColor="@color/colorBlackFour"
            android:layout_marginLeft="@dimen/activity_height_twenty_five"
            android:layout_marginRight="@dimen/activity_height_twenty_five"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/fragment_freight_item_textview_yf"
            android:layout_marginTop="@dimen/activity_height_twenty"
            android:layout_width="match_parent"
            android:textSize="@dimen/activity_height_thirteen"
            android:visibility="gone"
            android:textColor="@color/colorBlackFour"
            android:background="@drawable/fragment_freight_textview_background"
            android:layout_marginLeft="@dimen/activity_height_forty"
            android:layout_marginRight="@dimen/activity_height_forty"
            android:layout_height="@dimen/activity_number_forty_eight" />
        <TextView
            android:id="@+id/fragment_freight_item_textview_award"
            android:layout_width="match_parent"
            android:textSize="@dimen/activity_height_thirteen"
            android:visibility="gone"
            android:textColor="@color/colorBlackFour"
            android:background="@drawable/fragment_freight_item_text_background"
            android:layout_marginLeft="@dimen/activity_height_forty"
            android:layout_marginRight="@dimen/activity_height_forty"
            android:layout_height="@dimen/activity_number_forty_eight" />
    </LinearLayout>
</LinearLayout>