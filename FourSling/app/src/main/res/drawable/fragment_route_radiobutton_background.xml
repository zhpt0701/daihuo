<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape>
            <solid android:color="@color/colorWhiteness"/>
        </shape>
    </item>
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/colorRedTwo"/>
                </shape>
            </item>
            <item android:bottom="@dimen/activity_height_two">
                <shape>
                    <solid android:color="@color/colorWhiteness"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>